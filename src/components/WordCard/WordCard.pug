script
  include WordCard.js

template#WordCard
  li.WordCount(:onclick=(`speak`))
    template(~if='props.entry.subType') {{props.entry.subType}} --a
    template(~elif='false') {{props.entry.arabic}} --x
    template(~elif='props.entry.type') {{props.entry.type}} --s
    template(~else) {{props.entry.word}} --d
    template(:slot='text')
