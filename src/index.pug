-
  const { readJson } = require('./src/utils/readJson.js')
  let { lectures } = readJson('./data/words.json');
doctype html
html
  head
    title Learning German
  style
    include styles/styles.css
  body
    each lecture, index in lectures
      div
        h1 Lecture #{index + 1}
        ul
          each entry in lecture
            li(onclick=(`textToSpeach('${entry.word}')`))= entry.word

    script
      include functions/textToSpeach.js
